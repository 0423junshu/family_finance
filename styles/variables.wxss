/* styles/variables.wxss */
/* Material Design 设计系统变量 */
:root {
  /* 主色调 - Material Design Blue */
  --color-primary: #2a6ef2;
  --color-primary-light: rgba(42, 110, 242, 0.1);
  --color-primary-dark: #1e5bc7;
  
  /* 语义色彩 */
  --color-success: #34c759;
  --color-success-light: rgba(52, 199, 89, 0.1);
  --color-warning: #ff9500;
  --color-warning-light: rgba(255, 149, 0, 0.1);
  --color-error: #ff3b30;
  --color-error-light: rgba(255, 59, 48, 0.1);
  --color-info: #007aff;
  --color-info-light: rgba(0, 122, 255, 0.1);
  
  /* 中性色彩 */
  --color-text: #1f2329;
  --color-text-secondary: #646a73;
  --color-text-tertiary: #8f959e;
  --color-text-disabled: #c9cdd4;
  --color-text-inverse: #ffffff;
  
  /* 背景色彩 */
  --color-bg: #ffffff;
  --color-bg-secondary: #f7f8fa;
  --color-surface: #ffffff;
  --color-surface-secondary: #f7f8fa;
  --color-overlay: rgba(0, 0, 0, 0.6);
  
  /* 边框色彩 */
  --color-border: #e5e6eb;
  --color-border-light: #f2f3f5;
  --color-divider: #ebedf0;
  
  /* 阴影系统 */
  --shadow-xs: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.16);
  
  /* 圆角系统 */
  --radius: 12rpx;
  --radius-sm: 8rpx;
  --radius-lg: 16rpx;
  --radius-xl: 24rpx;
  --radius-full: 9999rpx;
  
  /* 间距系统 */
  --spacing: 16rpx;
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  --spacing-2xl: 48rpx;
  
  /* 字体系统 */
  --font-size-caption: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-title: 36rpx;
  --font-size-heading: 40rpx;
  
  /* 字重系统 */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  /* 行高系统 */
  --line-height-tight: 1.2;
  --line-height-normal: 1.4;
  --line-height-relaxed: 1.6;
  
  /* 组件尺寸 */
  --nav-height: 88rpx;
  --tab-height: 112rpx;
  --button-height: 88rpx;
  --input-height: 80rpx;
  --list-item-height: 120rpx;
  --touch-target-min: 88rpx;
  
  /* 动画时长 */
  --duration-fast: 0.15s;
  --duration-normal: 0.2s;
  --duration-slow: 0.3s;
  
  /* 缓动函数 */
  --ease-out: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
}

page {
  /* 兼容旧变量名 */
  --primary-color: var(--color-primary);
  --secondary-color: var(--color-success);
  --success-color: var(--color-success);
  --warning-color: var(--color-warning);
  --error-color: var(--color-error);
  
  --bg-color: var(--color-bg);
  --surface-color: var(--color-surface);
  --card-bg: var(--color-surface);
  
  --text-primary: var(--color-text);
  --text-secondary: var(--color-text-secondary);
  --text-tertiary: var(--color-text-tertiary);
  --text-inverse: var(--color-text-inverse);
  
  --border-color: var(--color-border);
  --divider-color: var(--color-divider);
  
  --shadow-light: var(--shadow-sm);
  --shadow-medium: var(--shadow-md);
  --shadow-heavy: var(--shadow-lg);
  
  --radius-small: var(--radius-sm);
  --radius-medium: var(--radius);
  --radius-large: var(--radius-lg);
  
  --spacing-xs: var(--spacing-xs);
  --spacing-sm: var(--spacing-sm);
  --spacing-md: var(--spacing);
  --spacing-lg: var(--spacing-lg);
  --spacing-xl: var(--spacing-xl);
  
  --font-size-xs: var(--font-size-caption);
  --font-size-sm: var(--font-size-sm);
  --font-size-md: var(--font-size-base);
  --font-size-lg: var(--font-size-lg);
  --font-size-xl: var(--font-size-title);
  --font-size-xxl: var(--font-size-heading);
  
  --font-weight-light: var(--font-weight-light);
  --font-weight-normal: var(--font-weight-normal);
  --font-weight-medium: var(--font-weight-medium);
  --font-weight-bold: var(--font-weight-semibold);
  
  --nav-height: var(--nav-height);
  --tab-height: var(--tab-height);
  --button-height: var(--button-height);
  --input-height: var(--input-height);
  --list-item-height: var(--list-item-height);
}

/* 深色模式变量 */
@media (prefers-color-scheme: dark) {
  page {
    --bg-color: #000000;
    --surface-color: #1C1C1E;
    --card-bg: #2C2C2E;
    
    --text-primary: #FFFFFF;
    --text-secondary: #8E8E93;
    --text-tertiary: #48484A;
    
    --border-color: #38383A;
    --divider-color: #2C2C2E;
  }
}