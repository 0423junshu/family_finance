/* pages/transfer/transfer.wxss */
.page-container {
  padding-top: 40rpx;
  padding-bottom: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.content {
  padding: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(102, 126, 234, 0.2);
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 表单区块 */
.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C1C1E;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 金额输入 */
.amount-input-container {
  display: flex;
  align-items: center;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.amount-input-container:focus-within {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.currency-symbol {
  font-size: 48rpx;
  font-weight: 600;
  color: #667eea;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  font-size: 48rpx;
  font-weight: 600;
  color: #1C1C1E;
  background: transparent;
  border: none;
}

.amount-input.error {
  color: #ff416c;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.5);
  transition: all 0.3s ease;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:active {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
  margin: 0 -16rpx;
  padding: 24rpx 16rpx;
}

.form-label {
  display: flex;
  align-items: center;
  min-width: 200rpx;
}

.form-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  text-align: center;
}

.form-label text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1C1C1E;
}

.form-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.account-info {
  display: flex;
  flex-direction: column;
}

.account-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 4rpx;
}

.account-balance {
  font-size: 24rpx;
  color: #8E8E93;
}

.placeholder-text {
  font-size: 28rpx;
  color: #8E8E93;
}

.selected-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1C1C1E;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  font-size: 36rpx;
  font-weight: 600;
  color: #8E8E93;
}

.note-input {
  flex: 1;
  font-size: 28rpx;
  color: #1C1C1E;
  background: transparent;
  border: none;
}

/* 转账箭头 */
.transfer-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 0;
}

.arrow-down-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
  font-size: 40rpx;
  line-height: 48rpx;
  text-align: center;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #ff416c;
  margin-top: 8rpx;
  margin-left: 64rpx;
}

/* 提交按钮 */
.submit-container {
  padding: 0 32rpx;
}

.btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
}

.btn-large {
  padding: 32rpx;
  font-size: 36rpx;
}

.btn-disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 选择器样式 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.picker-container {
  width: 100%;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.5);
}

.picker-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C1C1E;
}

.picker-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  font-size: 28rpx;
  line-height: 32rpx;
  text-align: center;
}

.picker-content {
  max-height: 60vh;
  overflow-y: auto;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.5);
  transition: all 0.3s ease;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item:active {
  background: rgba(102, 126, 234, 0.05);
}

.picker-item.selected {
  background: rgba(102, 126, 234, 0.1);
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  text-align: center;
}