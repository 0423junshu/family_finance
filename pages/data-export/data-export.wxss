/* pages/data-export/data-export.wxss */
@import '/styles/safe-area.wxss';
@import "../../styles/variables.wxss";
@import "../../styles/common.wxss";

.page-container {
  padding-top: 176rpx;
  /* 顶部安全区与下移适配 */
  padding-top: calc(176rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(176rpx + constant(safe-area-inset-top, 0px));
  padding-bottom: 40rpx;
  background: var(--color-bg-secondary);
  min-height: 100vh;
}

/* 通用区域样式 */
.section {
  margin: 32rpx;
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: var(--font-weight-semibold);
  color: var(--color-text);
}

.section-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.section-toggle {
  display: flex;
  align-items: center;
  padding: 16rpx;
  transition: transform 0.2s ease;
}

.section-toggle.active {
  transform: rotate(0deg);
}

.toggle-icon {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  transition: transform 0.2s ease;
}

/* 导出类型网格 */
.type-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
}

.type-item {
  background: var(--color-surface);
  border-radius: var(--radius);
  padding: 32rpx;
  display: flex;
  align-items: center;
  position: relative;
  transition: all 0.2s ease;
  border: 2rpx solid transparent;
}

.type-item.active {
  border-color: var(--color-primary);
  box-shadow: 0 4rpx 20rpx rgba(42, 110, 242, 0.15);
}

.type-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 32rpx;
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  line-height: 1.4;
}

.type-check {
  width: 40rpx;
  height: 40rpx;
  background: var(--color-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
}

/* 格式选择列表 */
.format-list {
  background: var(--color-surface);
  border-radius: var(--radius);
  overflow: hidden;
}

.format-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--color-border);
  position: relative;
  transition: background-color 0.2s ease;
}

.format-item:last-child {
  border-bottom: none;
}

.format-item.active {
  background: var(--color-primary-light);
}

.format-info {
  flex: 1;
}

.format-name {
  font-size: 30rpx;
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.format-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.format-check {
  width: 32rpx;
  height: 32rpx;
  background: var(--color-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 时间范围选择 */
.date-presets {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.preset-item {
  background: var(--color-surface);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.preset-item:active {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
}

.date-custom {
  background: var(--color-surface);
  border-radius: var(--radius);
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.date-item {
  flex: 1;
}

.date-label {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
}

.date-value {
  font-size: 30rpx;
  color: var(--color-text);
  padding: 16rpx 0;
  border-bottom: 2rpx solid var(--color-border);
}

.date-separator {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 筛选条件 */
.filters-content {
  background: var(--color-surface);
  border-radius: var(--radius);
  padding: 32rpx;
}

.filter-group {
  margin-bottom: 32rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-title {
  font-size: 28rpx;
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  background: var(--color-bg-secondary);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  padding: 12rpx 16rpx;
  transition: all 0.2s ease;
}

.filter-option.selected {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
}

.option-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.option-name {
  font-size: 26rpx;
  color: var(--color-text);
}

.filter-actions {
  margin-top: 24rpx;
  text-align: center;
}

.clear-btn {
  background: var(--color-bg-secondary);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-sm);
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

/* 资产导出选项 */
.asset-options {
  background: var(--color-surface);
  border-radius: var(--radius);
  overflow: hidden;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.option-info {
  flex: 1;
}

.option-title {
  font-size: 30rpx;
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

/* 导出按钮 */
.export-section {
  margin: 48rpx 32rpx;
}

.export-btn {
  width: 100%;
  height: 96rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  border-radius: var(--radius);
  font-size: 32rpx;
  font-weight: var(--font-weight-medium);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  border: none;
}

.export-btn:disabled {
  background: var(--color-text-disabled);
}

.export-btn.loading {
  background: var(--color-text-tertiary);
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

/* 导出历史 */
.history-content {
  background: var(--color-surface);
  border-radius: var(--radius);
  overflow: hidden;
}

.history-empty {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.history-list {
  /* 历史记录列表样式 */
}

.history-item {
  padding: 32rpx;
  border-bottom: 1rpx solid var(--color-border);
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-title {
  font-size: 30rpx;
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
  margin-bottom: 12rpx;
}

.history-details {
  /* 历史详情样式 */
}

.history-detail {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-bottom: 4rpx;
  line-height: 1.4;
}

.history-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: var(--radius-sm);
  font-size: 24rpx;
  border: none;
  min-width: 120rpx;
}

.action-btn.re-export {
  background: var(--color-primary-light);
  color: var(--color-primary);
}

.action-btn.delete {
  background: var(--color-error-light);
  color: var(--color-error);
}

.history-footer {
  padding: 32rpx;
  text-align: center;
  border-top: 1rpx solid var(--color-border);
}

.clear-all-btn {
  background: var(--color-error-light);
  color: var(--color-error);
  border: none;
  border-radius: var(--radius-sm);
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

/* 动画效果 */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 响应式适配 */
@media (min-width: 768rpx) {
  .type-grid {
    grid-template-columns: 1fr 1fr;
  }
  
  .date-custom {
    flex-direction: row;
  }
}