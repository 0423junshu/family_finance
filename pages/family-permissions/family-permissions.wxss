/* pages/family-permissions/family-permissions.wxss */
@import '/styles/safe-area.wxss';

.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 单个成员权限管理模式 */
.simple-permission-mode {
  /* 容器样式 */
}

/* 成员信息卡片 */
.member-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.member-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  gap: 24rpx;
}

.member-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.member-avatar-large image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text-large {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
}

.member-details {
  flex: 1;
}

.member-name-large {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.member-role-badge {
  display: inline-block;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  background: rgba(255, 255, 255, 0.2);
}

.member-role-badge.owner {
  background: rgba(255, 107, 107, 0.3);
}

.member-role-badge.admin {
  background: rgba(76, 217, 100, 0.3);
}

.member-role-badge.member {
  background: rgba(255, 255, 255, 0.2);
}

.member-join-time {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 基础权限设置卡片 */
.basic-permissions-card .card-header {
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.permission-note {
  font-size: 24rpx;
  color: #999999;
}

.basic-permissions-list {
  padding: 0 32rpx 32rpx;
}

.permission-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.permission-item:last-child {
  border-bottom: none;
}

.permission-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.permission-icon {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.permission-details {
  flex: 1;
}

.permission-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
  display: block;
}

.permission-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 20rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.save-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.save-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

.remove-btn {
  background: #ffffff;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 12rpx;
  padding: 22rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 批量权限管理模式 */
.batch-permission-mode {
  /* 容器样式 */
}

/* 成员选择器 */
.member-selector-card .card-header {
  padding-bottom: 16rpx;
}

.select-all-btn {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.member-list {
  padding: 0 32rpx 32rpx;
}

.member-selector-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s ease;
}

.member-selector-item:last-child {
  border-bottom: none;
}

.member-selector-item.selected {
  background-color: #f0f4ff;
}

.member-checkbox {
  margin-right: 16rpx;
}

.checkbox-icon {
  font-size: 32rpx;
  color: #667eea;
}

.member-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  overflow: hidden;
}

.member-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
}

/* 批量权限设置 */
.batch-permissions-card .card-header {
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.selected-hint {
  font-size: 24rpx;
  color: #667eea;
}

.batch-permissions-list {
  padding: 0 32rpx 24rpx;
}

.batch-action-buttons {
  padding: 0 32rpx 32rpx;
}

.apply-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 100%;
}

.apply-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

/* Toast 提示 */
.toast-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}

.toast {
  background: rgba(0, 0, 0, 0.8);
  color: #ffffff;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  min-width: 200rpx;
}

.toast.success {
  background: rgba(76, 217, 100, 0.9);
}

.toast.error {
  background: rgba(255, 71, 87, 0.9);
}

.toast.warning {
  background: rgba(255, 193, 7, 0.9);
  color: #333333;
}

.toast.info {
  background: rgba(23, 162, 184, 0.9);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .member-header {
    flex-direction: column;
    text-align: center;
    gap: 16rpx;
  }
  
  .member-details {
    text-align: center;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background-color: #1a1a1a;
  }
  
  .card {
    background: #2a2a2a;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .card-title {
    color: #ffffff;
  }
  
  .permission-name {
    color: #ffffff;
  }
  
  .permission-desc {
    color: #cccccc;
  }
  
  .member-name {
    color: #ffffff;
  }
  
  .toast {
    background: rgba(255, 255, 255, 0.9);
    color: #333333;
  }
}

/* 动画效果 */
.card {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.member-selector-item {
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 加载状态 */
.loading-placeholder {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}