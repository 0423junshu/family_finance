/* pages/db-validator/db-validator.wxss */
.container {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn.primary {
  background: #007aff;
  color: white;
}

.btn.secondary {
  background: #34c759;
  color: white;
}

.btn:not(.primary):not(.secondary) {
  background: #f2f2f7;
  color: #007aff;
}

.btn[disabled] {
  opacity: 0.6;
}

.results {
  margin-bottom: 32rpx;
}

.result-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-left: 8rpx solid #ddd;
}

.result-item.success {
  border-left-color: #34c759;
}

.result-item.error {
  border-left-color: #ff3b30;
}

.result-item.warning {
  border-left-color: #ff9500;
}

.result-item.info {
  border-left-color: #007aff;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.empty {
  text-align: center;
  padding: 80rpx;
  color: #999;
}

.instructions {
  background: white;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-top: 32rpx;
}

.instructions-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.instructions-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  padding-left: 24rpx;
  position: relative;
}

.instructions-item::before {
  content: 'â€¢';
  position: absolute;
  left: 0;
  color: #007aff;
}