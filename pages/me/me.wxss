/* 基础卡片样式，确保显眼可见 */
.page-container { padding: 12px; }
.card { background: #fff; border-radius: 12px; padding: 12px; margin: 8px 0; box-shadow: 0 2px 8px rgba(0,0,0,0.04); }
.card--hover { opacity: 0.96; }
.card-header { display: flex; align-items: center; justify-content: space-between; }
.card-icon .icon-text { font-size: 18px; }
.card-content { flex: 1; margin: 0 8px; }
.card-title { font-size: 16px; font-weight: 600; color: #1c1c1e; }
.card-subtitle { display:block; font-size: 12px; color: #8e8e93; margin-top: 2px; }
.card-arrow { min-width: 40px; display:flex; align-items:center; justify-content:flex-end; }
.card-body { margin-top: 8px; color: #3a3a3c; font-size: 14px; }
.card-desc { color: #636366; font-size: 12px; }