/* pages/me/me.wxss */
@import '/styles/safe-area.wxss';

.page-container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 160rpx;
}

/* ==================== 用户信息区域 ==================== */

.profile-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #F2F2F7;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1C1E;
  display: block;
}

.phone {
  font-size: 28rpx;
  color: #8E8E93;
  display: block;
}

/* ==================== 统一卡片样式 ==================== */

.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  /* 统一内边距为中等尺寸，避免协作卡显得更高 */
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 20rpx; /* 统一与列表卡片间距 */
  margin-bottom: 16rpx;
}

.card-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.card-icon.invite {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border: 2rpx dashed rgba(102, 126, 234, 0.4);
  box-shadow: none;
}

.icon-text {
  font-size: 32rpx;
  color: white;
}

.card-icon.invite .icon-text {
  color: #667eea;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1C1C1E;
  display: block;
  line-height: 1.2;
}

.card-subtitle {
  font-size: 24rpx;
  color: #8E8E93;
  display: block;
  line-height: 1.2;
}

.card-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #FF3B30;
}

.status-indicator.online {
  background: #34C759;
  box-shadow: 0 0 8rpx rgba(52, 199, 89, 0.4);
}

.card-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

.card-body {
  margin-top: 4rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #8E8E93;
  line-height: 1.4;
  display: block;
}

/* 协作功能卡片统一样式（仅保留色条，不再增加额外高度） */
.collaboration-card::before {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.collaboration-card .card-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}
/* 统一协作卡片的整体内边距与其他卡一致（避免偏大） */
.collaboration-card {
  padding: 32rpx 28rpx !important;
}

/* 移除协作卡片上不必要的统计条额外留白，避免整体高度偏大 */
.card-stats {
  display: none;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 4rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #8E8E93;
}

.collaboration-invite-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border: 2rpx dashed rgba(102, 126, 234, 0.2);
}

.collaboration-invite-card::before {
  display: none;
}

.collaboration-invite-card:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: rgba(102, 126, 234, 0.3);
}



/* ==================== 响应式适配 ==================== */

@media (max-width: 750rpx) {
  .page-container {
    padding: 24rpx;
  }
  
  .profile-section {
    padding: 32rpx 24rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .nickname {
    font-size: 32rpx;
  }
  
  .phone {
    font-size: 26rpx;
  }
  
  .menu-item {
    padding: 28rpx 24rpx;
    gap: 20rpx;
  }
  
  .menu-icon {
    width: 72rpx;
    height: 72rpx;
    font-size: 36rpx;
  }
  
  .menu-title {
    font-size: 28rpx;
  }
  
  .menu-desc {
    font-size: 22rpx;
  }
  
  .invite-content {
    padding: 32rpx 24rpx;
  }
  
  .invite-icon {
    font-size: 64rpx;
  }
  
  .invite-title {
    font-size: 28rpx;
  }
  
  .invite-desc {
    font-size: 24rpx;
  }
}

/* ==================== 深色模式适配 ==================== */

@media (prefers-color-scheme: dark) {
  .section-card {
    background: rgba(28, 28, 30, 0.95);
  }
  
  .profile-section {
    background: rgba(28, 28, 30, 0.95);
  }
  
  .section-title,
  .nickname,
  .menu-title,
  .invite-title {
    color: #FFFFFF;
  }
  
  .section-subtitle,
  .phone,
  .menu-desc,
  .invite-desc {
    color: #AEAEB2;
  }
  
  .menu-item {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .section-header {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .invite-section {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
    border-color: rgba(102, 126, 234, 0.4);
  }
}

/* ==================== 动画效果 ==================== */

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-card {
  animation: fadeIn 0.6s ease-out;
}

.section-card:nth-child(1) { animation-delay: 0.1s; }
.section-card:nth-child(2) { animation-delay: 0.2s; }
.section-card:nth-child(3) { animation-delay: 0.3s; }
.section-card:nth-child(4) { animation-delay: 0.4s; }

/* ==================== 特殊效果 ==================== */

.menu-item::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transition: width 0.3s ease;
}

.menu-item:active::after {
  width: 100%;
}