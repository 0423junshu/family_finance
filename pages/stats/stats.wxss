/* pages/stats/stats.wxss */
@import '/styles/safe-area.wxss';
@import "../../styles/variables.wxss";
@import "../../styles/common.wxss";

.page-container {
  padding-top: 176rpx;
  /* 顶部安全区与下移适配 */
  padding-top: calc(176rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(176rpx + constant(safe-area-inset-top, 0px));
  padding-bottom: 160rpx;
  background: #F5F5F5;
  min-height: 100vh;
}

/* 时间范围选择 */
.date-range-tabs {
  display: flex;
  background: #FFFFFF;
  margin: 32rpx;
  border-radius: 16rpx;
  padding: 8rpx;
}

.range-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #8E8E93;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.range-tab.active {
  background: #007AFF;
  color: #FFFFFF;
}

/* 统计概览 */
.summary-card {
  display: flex;
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  padding: 40rpx 0;
}

.summary-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-label {
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 16rpx;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 600;
}

.summary-value.income {
  color: #34C759;
}

.summary-value.expense {
  color: #FF3B30;
}

/* 分类统计 */
.category-stats {
  background: #FFFFFF;
  margin: 0 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 32rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-name {
  font-size: 28rpx;
  color: #1C1C1E;
}

.category-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF3B30;
}

.category-bar {
  height: 8rpx;
  background: #F2F2F7;
  border-radius: 4rpx;
  overflow: hidden;
}

.category-progress {
  height: 100%;
  background: linear-gradient(90deg, #007AFF 0%, #5AC8FA 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}