/* pages/font-test/font-test.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 32rpx;
  color: #999;
}

.results {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-item {
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.result-status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.result-status.success {
  background-color: #e8f5e8;
  color: #52c41a;
}

.result-status.error {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.result-details {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.font-info {
  background-color: #f9f9f9;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-top: 24rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary {
  background-color: #1890ff;
  color: white;
}

.btn-primary:active {
  background-color: #096dd9;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #d9d9d9;
}

.btn-secondary:active {
  background-color: #e6e6e6;
}

.test-element {
  position: absolute;
  left: -9999rpx;
  opacity: 0;
  pointer-events: none;
}

/* TDesign图标字体测试样式 */
.t-icon {
  font-family: "t-icon" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}