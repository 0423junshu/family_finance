/* pages/index/index.wxss */
.page-container {
  padding-top: 20rpx;
  padding-bottom: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
}

.content {
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
}

/* 加载状�?*/
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  margin: 32rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(102, 126, 234, 0.2);
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 统计卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-right: 16rpx;
}

.month-arrow {
  font-size: 24rpx;
  color: #667eea;
  transition: transform 0.3s ease;
}

.month-selector:active .month-arrow {
  transform: rotate(180deg);
}

.sync-status {
  display: flex;
  align-items: center;
}

.sync-text {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.sync-text.success {
  color: #38ef7d;
  background: rgba(56, 239, 125, 0.1);
}

.sync-text.error {
  color: #ff416c;
  background: rgba(255, 65, 108, 0.1);
}

.sync-text.syncing {
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  animation: pulse 2s infinite;
}

.stats-content {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(102, 126, 234, 0.05);
  transition: all 0.3s ease;
}

.stat-label {
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1C1C1E;
}

.stat-item.income .stat-value {
  color: #38ef7d;
}

.stat-item.expense .stat-value {
  color: #ff416c;
}

.stat-value.positive {
  color: #38ef7d;
}

.stat-value.negative {
  color: #ff416c;
}

.sync-actions {
  display: flex;
  justify-content: center;
}

.btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #667eea;
  color: #667eea;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(2rpx) scale(0.98);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.action-icon.expense {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(255, 65, 108, 0.3);
}

.action-icon.income {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(17, 153, 142, 0.3);
}

.action-icon.transfer {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.action-text {
  font-size: 24rpx;
  color: #1C1C1E;
  font-weight: 600;
}

/* 交易记录区域 */
.transactions-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.section-more {
  font-size: 28rpx;
  color: #FFFFFF;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  font-weight: 500;
}

/* 空状�?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #1C1C1E;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #8E8E93;
  text-align: center;
  line-height: 1.6;
}

/* 交易记录列表 */
.transactions-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.5);
  transition: all 0.3s ease;
  position: relative;
}

/* 统一卡片样式 */
.card-item {
  position: relative;
  overflow: hidden;
}

.card-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
  transition: background-color 0.2s ease;
}

.card-item:active::after {
  background-color: rgba(102, 126, 234, 0.1);
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item:active {
  background: rgba(102, 126, 234, 0.05);
  transform: scale(0.98);
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.category-emoji {
  font-size: 32rpx;
}

.transaction-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.transaction-desc {
  font-size: 28rpx;
  color: #1C1C1E;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.transaction-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.transaction-date {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 500;
}

.transaction-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.amount.income {
  color: #38ef7d;
}

.amount.expense {
  color: #ff416c;
}

.account-name {
  font-size: 22rpx;
  color: #8E8E93;
  font-weight: 500;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: 300;
}

/* 新账单提�?*/
.new-transaction-tip {
  position: fixed;
  top: 200rpx;
  left: 32rpx;
  right: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 99;
  animation: slideDown 0.5s ease-out;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1);
  }
}

.tip-text {
  font-size: 28rpx;
  font-weight: 500;
}

.tip-close {
  font-size: 32rpx;
  font-weight: bold;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 月份选择�?*/
.month-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.month-picker-container {
  width: 100%;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.month-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.picker-cancel {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(102, 126, 234, 0.1);
}

.month-picker-view {
  height: 400rpx;
}

.picker-item {
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

/* 动画效果 */
@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.7; }
  100% { opacity: 1; }
}


