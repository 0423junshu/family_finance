/* pages/family/family.wxss */

.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 卡片通用样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 家庭信息卡片 */
.family-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.family-header {
  padding: 32rpx 32rpx 24rpx;
}

.family-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.family-name {
  font-size: 36rpx;
  font-weight: 600;
}

.member-count {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 家庭码区域 */
.family-code-section {
  background: rgba(255, 255, 255, 0.1);
  margin: 0 32rpx 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.family-code-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
}

.code-actions {
  display: flex;
  gap: 16rpx;
}

.family-code-display {
  text-align: center;
  margin: 24rpx 0 16rpx;
}

.family-code {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 8rpx;
  font-family: 'Courier New', monospace;
}

.family-code-tip {
  font-size: 24rpx;
  opacity: 0.7;
  text-align: center;
}

/* 成员列表 */
.members-card .card-header {
  border-bottom: 1rpx solid #f0f0f0;
}

.member-avatar {
  position: relative;
  display: inline-block;
}

.online-indicator {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background: #52c41a;
  border: 2rpx solid #ffffff;
  border-radius: 50%;
}

.member-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  color: #999999;
}

/* 管理功能卡片 */
.management-card .card-header {
  border-bottom: 1rpx solid #f0f0f0;
}

/* 快捷操作 */
.actions-card .card-header {
  border-bottom: 1rpx solid #f0f0f0;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx 32rpx;
}

.action-btn {
  flex: 1;
}

/* 未加入家庭状态 */
.no-family-card {
  text-align: center;
  padding: 60rpx 32rpx;
}

.no-family-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.no-family-icon {
  font-size: 120rpx;
  opacity: 0.6;
}

.no-family-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.no-family-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  max-width: 500rpx;
}

.no-family-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.no-family-actions .t-button {
  min-width: 160rpx;
}

/* 邀请弹窗 */
.invite-popup {
  width: 600rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.popup-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.invite-methods {
  padding: 24rpx 0;
}

.invite-method {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  transition: background-color 0.2s;
}

.invite-method:active {
  background-color: #f8f8f8;
}

.method-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 80rpx;
  text-align: center;
}

.method-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.method-desc {
  font-size: 26rpx;
  color: #666666;
}

.popup-actions {
  padding: 24rpx 32rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .family-code {
    font-size: 40rpx;
    letter-spacing: 6rpx;
  }
  
  .invite-popup {
    width: 90vw;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background-color: #1a1a1a;
  }
  
  .card {
    background: #2a2a2a;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .card-title {
    color: #ffffff;
  }
  
  .invite-popup {
    background: #2a2a2a;
  }
  
  .popup-title {
    color: #ffffff;
  }
  
  .method-title {
    color: #ffffff;
  }
  
  .method-desc {
    color: #cccccc;
  }
  
  .invite-method:active {
    background-color: #3a3a3a;
  }
}

/* 动画效果 */
.card {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.family-code-display {
  animation: fadeIn 0.5s ease-out 0.2s both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 加载状态 */
.loading-placeholder {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}