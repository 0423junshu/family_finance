/* pages/manual-db-guide/manual-db-guide.wxss */
.container {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.section {
  background: white;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.section-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.steps {
  margin-bottom: 24rpx;
}

.step {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: #007aff;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  border: none;
}

.btn.primary {
  background: #007aff;
  color: white;
}

.btn.secondary {
  background: #34c759;
  color: white;
}

.btn.info {
  background: #ff9500;
  color: white;
  width: 100%;
  margin-top: 16rpx;
}

.collection-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.collection-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  border-left: 6rpx solid #ddd;
  transition: all 0.2s;
}

.collection-item.required {
  border-left-color: #ff3b30;
}

.collection-item.optional {
  border-left-color: #34c759;
}

.collection-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.collection-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.collection-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  font-family: 'Courier New', monospace;
}

.collection-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.collection-badge.required {
  background: #ffebee;
  color: #c62828;
}

.collection-badge.optional {
  background: #e8f5e8;
  color: #2e7d32;
}

.collection-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.collection-fields {
  display: block;
  font-size: 22rpx;
  color: #999;
  font-family: 'Courier New', monospace;
}

.index-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.index-item {
  background: #f0f8ff;
  border-radius: 6rpx;
  padding: 16rpx;
  border-left: 4rpx solid #007aff;
}

.index-collection {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #007aff;
  margin-bottom: 4rpx;
  font-family: 'Courier New', monospace;
}

.index-fields {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
  font-family: 'Courier New', monospace;
}

.index-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.tips {
  background: #fff3e0;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #f57c00;
  margin-bottom: 16rpx;
}

.tips-item {
  display: block;
  font-size: 24rpx;
  color: #f57c00;
  line-height: 1.6;
  margin-bottom: 8rpx;
}