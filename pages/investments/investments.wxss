/* pages/investments/investments.wxss */
@import '/styles/safe-area.wxss';
@import "../../styles/variables.wxss";
@import "../../styles/common.wxss";

/* 月份选择器样�?*/
.month-selector {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.stats-subtitle {
  font-size: 28rpx;
  color: #FFFFFF;
  margin: 0 8rpx;
}

.month-arrow {
  font-size: 24rpx;
  color: #FFFFFF;
  transition: transform 0.3s ease;
}

.month-selector:active .month-arrow {
  transform: rotate(180deg);
}

/* 月份选择器弹窗样�?*/
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  background: #FFFFFF;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.picker-close {
  font-size: 40rpx;
  color: #8E8E93;
  padding: 10rpx;
}

.picker-body {
  padding: 30rpx;
}

.top-safe-inset {
  height: env(safe-area-inset-top, 0px);
  height: constant(safe-area-inset-top, 0px);
}
.page-container {
  padding-top: calc(20rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(20rpx + constant(safe-area-inset-top, 0px));
  padding-bottom: 160rpx;
  background: #F5F5F5;
  min-height: 100vh;
  padding-top: calc(20rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(20rpx + constant(safe-area-inset-top, 0px));
}

/* 总览卡片 */
.overview-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 24rpx;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: grid; /* 三列网格，稳定顶对齐 */
  grid-template-columns: repeat(3, 1fr);
  column-gap: 24rpx;
  align-items: stretch; /* 拉伸以实现三列等高 */
  grid-auto-rows: min-content; /* 保证各行高度由内容决定，避免垂直错位 */
  row-gap: 0; /* 行间距归零，由列内 margin 控制 */
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 顶部对齐，列内元素起点一致 */
  gap: 0; /* 由 label 的 margin-bottom 控制垂直间距，确保三列基线一致 */
  flex: 1; /* 三列均分，避免挤压导致换行 */
  height: 100%; /* 等高拉伸 */
}

.overview-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 26rpx;
  display: block;
  white-space: nowrap; /* 防止中文标签换行导致间距不一致 */
  margin-bottom: 6rpx; /* 收紧标签→数值间距，去除“空一行”观感 */
}

.overview-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 32rpx; /* 收紧行高，消除空行感 */
  display: block; /* 块级化，确保与标签形成稳定垂直间距，避免 inline 基线差异 */
  white-space: nowrap; /* 禁止换行，避免纵向偏移 */
}

.overview-value.positive {
  color: #4CD964;
}

.overview-value.negative {
  color: #FF6B6B;
}

/* 标签�?*/
.tab-bar {
  display: flex;
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #8E8E93;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #007AFF;
  color: #FFFFFF;
  font-weight: 500;
}

/* 投资列表 */
.investment-list {
  margin: 0 32rpx;
}

.investment-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.investment-icon {
  width: 64rpx;
  height: 64rpx;
  background: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.investment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.investment-name {
  font-size: 26rpx;
  color: #1C1C1E;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.investment-amount {
  font-size: 22rpx;
  color: #8E8E93;
}

.investment-return {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.return-amount {
  font-size: 26rpx;
  font-weight: 600;
  display: block;
  line-height: 28rpx;
  margin-bottom: 4rpx;
}

.return-rate {
  font-size: 20rpx;
  display: block;
  line-height: 24rpx;
}

.return-amount.positive,
.return-rate.positive {
  color: #34C759;
}

.return-amount.negative,
.return-rate.negative {
  color: #FF3B30;
}

/* 空状�?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #1C1C1E;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  background: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.add-icon {
  color: #FFFFFF;
  font-size: 48rpx;
  font-weight: 300;
}

/* 概览卡片右上角小眼睛定位 */
.overview-card { position: relative; }
.overview-tools {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  justify-content: flex-end;
  z-index: 2;
}
.overview-tools .eye-toggle { font-size: 32rpx; line-height: 32rpx; }

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  right: 32rpx;
  bottom: 340rpx;
  width: 80rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.refresh-icon {
  font-size: 32rpx;
}
