/* pages/investments/investments.wxss */
@import '/styles/safe-area.wxss';
@import "../../styles/variables.wxss";
@import "../../styles/common.wxss";

/* 月份选择器样�?*/
.month-selector {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.stats-subtitle {
  font-size: 28rpx;
  color: #FFFFFF;
  margin: 0 8rpx;
}

.month-arrow {
  font-size: 24rpx;
  color: #FFFFFF;
  transition: transform 0.3s ease;
}

.month-selector:active .month-arrow {
  transform: rotate(180deg);
}

/* 月份选择器弹窗样�?*/
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  background: #FFFFFF;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.picker-close {
  font-size: 40rpx;
  color: #8E8E93;
  padding: 10rpx;
}

.picker-body {
  padding: 30rpx;
}

.top-safe-inset {
  height: env(safe-area-inset-top, 0px);
  height: constant(safe-area-inset-top, 0px);
}
.page-container {
  padding-top: calc(20rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(20rpx + constant(safe-area-inset-top, 0px));
  padding-bottom: 160rpx;
  background: #F5F5F5;
  min-height: 100vh;
  padding-top: calc(20rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(20rpx + constant(safe-area-inset-top, 0px));
}

/* 总览卡片 */
.overview-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 32rpx;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: space-between;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.overview-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.overview-value.positive {
  color: #4CD964;
}

.overview-value.negative {
  color: #FF6B6B;
}

/* 标签�?*/
.tab-bar {
  display: flex;
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #8E8E93;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #007AFF;
  color: #FFFFFF;
  font-weight: 500;
}

/* 投资列表 */
.investment-list {
  margin: 0 32rpx;
}

.investment-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.investment-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.investment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.investment-name {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.investment-amount {
  font-size: 24rpx;
  color: #8E8E93;
}

.investment-return {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.return-amount {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.return-rate {
  font-size: 22rpx;
}

.return-amount.positive,
.return-rate.positive {
  color: #34C759;
}

.return-amount.negative,
.return-rate.negative {
  color: #FF3B30;
}

/* 空状�?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #1C1C1E;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  background: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.add-icon {
  color: #FFFFFF;
  font-size: 48rpx;
  font-weight: 300;
}

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  right: 32rpx;
  bottom: 340rpx;
  width: 80rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.refresh-icon {
  font-size: 32rpx;
}
