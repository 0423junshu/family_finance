.page-container { padding: 24rpx; background: #F5F5F5; min-height: 100vh; }
.card { background: #FFFFFF; border-radius: 16rpx; margin: 24rpx 0; padding: 24rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04); }
.card-header { display: flex; align-items: center; justify-content: space-between; }
.card-icon .icon-text { font-size: 32rpx; }
.card-content { flex: 1; margin: 0 16rpx; }
.card-title { font-size: 30rpx; font-weight: 600; color: #1C1C1E; }
.card-subtitle { display:block; font-size: 24rpx; color: #8E8E93; margin-top: 4rpx; }
.card-action { min-width: 120rpx; display:flex; justify-content:flex-end; }
.card-body { margin-top: 12rpx; }
.card-desc { font-size: 24rpx; color: #8E8E93; line-height: 1.5; }
.btn { background: #FFFFFF; border: 1rpx solid #E5E5EA; border-radius: 12rpx; padding: 12rpx 24rpx; }
.btn.primary { background: #007AFF; color: #FFFFFF; border-color: #007AFF; }
button[disabled], .btn[disabled] { opacity: 0.5; }