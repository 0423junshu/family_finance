/* pages/investment-add/investment-add.wxss */
@import '/styles/safe-area.wxss';

.page-container {
  padding-top: 20rpx;
  padding-bottom: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.content {
  padding: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(102, 126, 234, 0.2);
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.required {
  font-size: 28rpx;
  color: #ff3b30;
  margin-left: 8rpx;
}

.form-input {
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.form-input:focus-within {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #1C1C1E;
  background: transparent;
  border: none;
}

.input.error {
  color: #ff3b30;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #1C1C1E;
  background: transparent;
  border: none;
}

/* 金额输入 */
.amount-input-container {
  display: flex;
  align-items: center;
}

.currency-symbol {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  background: transparent;
  border: none;
}

.amount-input.error {
  color: #ff3b30;
}

/* 百分比输入 */
.percent-input-container {
  display: flex;
  align-items: center;
}

.percent-input {
  flex: 1;
  font-size: 28rpx;
  color: #1C1C1E;
  background: transparent;
  border: none;
}

.percent-symbol {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
  margin-left: 16rpx;
}

/* 表单值显示 */
.form-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.form-value:active {
  background: rgba(102, 126, 234, 0.05);
}

/* 投资类型选择样式 */
.type-display {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-icon {
  font-size: 32rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1C1C1E;
}

.selected-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1C1C1E;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 收益显示 */
.profit-display {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.profit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.profit-item:last-child {
  margin-bottom: 0;
}

.profit-label {
  font-size: 26rpx;
  color: #8E8E93;
  font-weight: 500;
}

.profit-value {
  font-size: 28rpx;
  font-weight: 700;
}

.profit-value.positive {
  color: #34C759;
}

.profit-value.negative {
  color: #FF3B30;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #ff3b30;
  margin-top: 8rpx;
  margin-left: 16rpx;
}

/* 操作按钮 */
.action-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 32rpx;
}

.btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
}

.btn-danger {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(255, 65, 108, 0.4);
}

.btn-large {
  padding: 32rpx;
  font-size: 36rpx;
}

.btn-disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 投资类型选择器弹窗样式 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.picker-container {
  width: 100%;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.8);
}

.picker-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C1C1E;
}

.picker-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.picker-content {
  max-height: 60vh;
  overflow-y: auto;
  padding: 16rpx 0;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  transition: all 0.3s ease;
}

.picker-item:active {
  background: rgba(102, 126, 234, 0.05);
}

.picker-item.selected {
  background: rgba(102, 126, 234, 0.1);
}

.type-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.type-name {
  font-size: 32rpx;
  color: #333;
}

.picker-item.selected .type-name {
  color: #667eea;
  font-weight: 500;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
}