/* pages/history-detail/history-detail.wxss */
@import '/styles/safe-area.wxss';

.page-container {
  padding: 0 0 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-top: calc(16rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(16rpx + constant(safe-area-inset-top, 0px));
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.content {
  padding: 0 30rpx;
}

/* 日期选择器 */
.date-selector {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-display {
  display: flex;
  justify-content: center;
  align-items: center;
}

.date-text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.date-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.cycle-info {
  margin-top: 16rpx;
  text-align: center;
}

.cycle-text {
  font-size: 24rpx;
  color: #666;
}

/* 月度统计 */
.stats-card {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.stats-value.income {
  color: #4cd964;
}

.stats-value.expense {
  color: #ff3b30;
}

/* 筛选器 */
.filter-bar {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.filter-item.active {
  color: #007AFF;
  font-weight: 500;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #007AFF;
  border-radius: 3rpx;
}

/* 交易记录列表 */
.transaction-list {
  margin-top: 30rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.date-group {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #eee;
}

.date-info {
  display: flex;
  align-items: center;
}

.date {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.weekday {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.date-summary {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.date-summary .income,
.date-summary .expense {
  font-size: 24rpx;
}

.date-summary .income {
  color: #4cd964;
}

.date-summary .expense {
  color: #ff3b30;
}

.transactions {
  background-color: #fff;
}

.transaction-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.transaction-icon {
  font-size: 40rpx;
}

.transaction-content {
  flex: 1;
}

.transaction-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.transaction-category {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 500;
}

.transaction-amount.income {
  color: #4cd964;
}

.transaction-amount.expense {
  color: #ff3b30;
}

.transaction-amount.transfer {
  color: #007AFF;
}

.transaction-sub {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.transaction-details {
  display: flex;
  align-items: center;
}

.transaction-account,
.transaction-transfer-arrow,
.transaction-target-account,
.transaction-description {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.transaction-actions {
  display: flex;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0;
  transition: opacity 0.3s;
}

.transaction-item:active .transaction-actions {
  opacity: 1;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.action-btn.edit {
  background-color: #f0f0f0;
}

.action-btn.delete {
  background-color: #ffebeb;
}

.action-icon {
  font-size: 32rpx;
}

/* 日期选择器弹窗 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-container {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.picker-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.picker-content {
  display: flex;
  height: 400rpx;
}

.year-picker,
.month-picker {
  flex: 1;
  height: 100%;
}

.picker-item {
  line-height: 40px;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.picker-actions {
  display: flex;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}

.btn-cancel {
  color: #666;
  background-color: #f5f5f5;
}

.btn-confirm {
  color: #fff;
  background-color: #007AFF;
}