/* pages/history-detail/history-detail.wxss */
.page-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-top: 176rpx;
  padding-bottom: 40rpx;
}

/* 日期选择器 */
.date-selector {
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.date-display {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.arrow-icon {
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s;
}

/* 统计卡片 */
.stats-card {
  background-color: #fff;
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
}

.stat-value.income {
  color: #4caf50;
}

.stat-value.expense {
  color: #f44336;
}

.transaction-count {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 筛选器 */
.filter-tabs {
  display: flex;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background-color: #4caf50;
  color: #fff;
}

/* 交易记录分组 */
.transaction-groups {
  margin: 20rpx;
}

.date-group {
  margin-bottom: 30rpx;
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-display {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.weekday {
  font-size: 24rpx;
  color: #999;
}

.day-summary {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
}

.day-income {
  color: #4caf50;
}

.day-expense {
  color: #f44336;
}

/* 当日交易列表 */
.day-transactions {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 16rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item:active {
  background-color: #f8f9fa;
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 24rpx;
  color: #fff;
}

.transaction-icon.income {
  background-color: #4caf50;
}

.transaction-icon.expense {
  background-color: #f44336;
}

.transaction-info {
  flex: 1;
}

.transaction-category {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.transaction-details {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.description {
  font-size: 24rpx;
  color: #666;
}

.time {
  font-size: 22rpx;
  color: #999;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 600;
}

.transaction-amount.income {
  color: #4caf50;
}

.transaction-amount.expense {
  color: #f44336;
}

/* 加载和空状态 */
.loading-state, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 日期选择器弹窗 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.picker-container {
  background-color: #fff;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  padding: 40rpx;
}

.picker-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
}

.picker-value {
  font-size: 28rpx;
  color: #4caf50;
  padding: 16rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.picker-footer {
  padding: 20rpx 40rpx 40rpx;
}

.confirm-btn {
  width: 100%;
  background-color: #4caf50;
  color: #fff;
  font-size: 28rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
}