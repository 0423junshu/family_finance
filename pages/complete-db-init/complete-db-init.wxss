/* pages/complete-db-init/complete-db-init.wxss */
.container {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.status {
  display: block;
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
}

.info {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.info-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.collection-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.collection-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.btn {
  padding: 28rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn.primary {
  background: #007aff;
  color: white;
}

.btn.secondary {
  background: #34c759;
  color: white;
}

.btn.info {
  background: #ff9500;
  color: white;
}

.btn[disabled] {
  opacity: 0.6;
}

.results {
  margin-bottom: 32rpx;
}

.result-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-left: 8rpx solid #ddd;
}

.result-item.success {
  border-left-color: #34c759;
}

.result-item.error {
  border-left-color: #ff3b30;
}

.result-item.warning {
  border-left-color: #ff9500;
}

.result-item.info {
  border-left-color: #007aff;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.result-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.empty {
  text-align: center;
  padding: 80rpx;
  color: #999;
}

.tips {
  background: #fff3e0;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #f57c00;
  margin-bottom: 16rpx;
}

.tips-item {
  display: block;
  font-size: 24rpx;
  color: #f57c00;
  line-height: 1.6;
  margin-bottom: 8rpx;
}