/* pages/operation-logs/operation-logs.wxss */
@import '/styles/safe-area.wxss';

.page-container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 搜索和筛选区域 */
.search-filter-section {
  background: #ffffff;
  padding: 20rpx;
  border-bottom: 1rpx solid #ebeef5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-container {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 72rpx;
  background: #f5f7fa;
  border-radius: 36rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #333333;
  border: none;
}

.search-input::placeholder {
  color: #999999;
}

.search-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  background: #cccccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  font-size: 20rpx;
  color: #ffffff;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 4rpx;
}

.filter-tab {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  background: #f5f7fa;
  border-radius: 20rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s ease;
}

.filter-tab.active {
  background: #e6f3ff;
  border-color: #409eff;
}

.tab-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.filter-tab.active .tab-text {
  color: #409eff;
}

/* 统计信息 */
.stats-summary {
  display: flex;
  background: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-number {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #409eff;
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #999999;
}

/* 日志容器 */
.logs-container {
  padding: 0 20rpx 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #409eff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  line-height: 1.5;
}

/* 时间轴容器 */
.timeline-container {
  margin-top: 20rpx;
}

.timeline-group {
  margin-bottom: 40rpx;
}

/* 日期分隔线 */
.date-divider {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.date-line {
  flex: 1;
  height: 1rpx;
  background: #e4e7ed;
}

.date-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e4e7ed;
  margin: 0 20rpx;
}

.date-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.count-text {
  font-size: 22rpx;
  color: #999999;
}

/* 时间轴日志 */
.timeline-logs {
  position: relative;
}

.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
  position: relative;
}

/* 时间轴标记 */
.timeline-marker {
  flex-shrink: 0;
  width: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.marker-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #409eff;
  border: 3rpx solid #ffffff;
  box-shadow: 0 0 0 2rpx #409eff;
  z-index: 2;
}

.marker-dot.success {
  background: #67c23a;
  box-shadow: 0 0 0 2rpx #67c23a;
}

.marker-dot.error {
  background: #f56c6c;
  box-shadow: 0 0 0 2rpx #f56c6c;
}

.marker-dot.warning {
  background: #e6a23c;
  box-shadow: 0 0 0 2rpx #e6a23c;
}

.marker-dot.info {
  background: #909399;
  box-shadow: 0 0 0 2rpx #909399;
}

.marker-line {
  flex: 1;
  width: 2rpx;
  background: #e4e7ed;
  margin-top: 8rpx;
}

/* 日志卡片 */
.log-card {
  flex: 1;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.log-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4rpx;
}

.user-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-role {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.user-role.owner {
  background: #fef0f0;
  color: #f56c6c;
}

.user-role.admin {
  background: #f0f9ff;
  color: #409eff;
}

.user-role.member {
  background: #f5f7fa;
  color: #909399;
}

.user-role.system {
  background: #f4f4f5;
  color: #666666;
}

.log-time {
  font-size: 22rpx;
  color: #999999;
}

/* 日志状态 */
.log-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.log-status.success {
  background: #f0f9ff;
  color: #67c23a;
}

.log-status.error {
  background: #fef0f0;
  color: #f56c6c;
}

.log-status.warning {
  background: #fdf6ec;
  color: #e6a23c;
}

.log-status.info {
  background: #f4f4f5;
  color: #909399;
}

/* 卡片主体 */
.card-body {
  margin-bottom: 16rpx;
}

.operation-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.operation-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

/* 操作标签 */
.operation-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  border: 1rpx solid #e4e7ed;
}

.tag-text {
  font-size: 22rpx;
  color: #666666;
}

/* 数据变更 */
.data-changes {
  background: #fafbfc;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.change-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.change-item:last-child {
  margin-bottom: 0;
}

.change-field {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  min-width: 120rpx;
}

.change-values {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.old-value {
  font-size: 24rpx;
  color: #f56c6c;
  text-decoration: line-through;
}

.arrow {
  font-size: 20rpx;
  color: #999999;
}

.new-value {
  font-size: 24rpx;
  color: #67c23a;
  font-weight: 500;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.result-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.result-icon {
  font-size: 24rpx;
}

.result-indicator.success .result-icon {
  color: #67c23a;
}

.result-indicator.error .result-icon {
  color: #f56c6c;
}

.result-text {
  font-size: 24rpx;
  font-weight: 500;
}

.result-indicator.success .result-text {
  color: #67c23a;
}

.result-indicator.error .result-text {
  color: #f56c6c;
}

.result-message {
  font-size: 22rpx;
  color: #999999;
  flex: 1;
  text-align: right;
}

/* 展开详情 */
.card-details {
  margin-top: 16rpx;
}

.details-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 16rpx 0;
}

.detail-section {
  margin-bottom: 20rpx;
}

.detail-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.detail-items {
  background: #fafbfc;
  border-radius: 8rpx;
  padding: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 24rpx;
  color: #666666;
}

.detail-value {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

.affected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.affected-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  background: #f0f9ff;
  border-radius: 8rpx;
  border: 1rpx solid #409eff;
}

.affected-type {
  font-size: 22rpx;
  color: #409eff;
}

.affected-count {
  font-size: 20rpx;
  color: #409eff;
  font-weight: 600;
}

.detail-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  border: 1rpx solid #e4e7ed;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: #e4e7ed;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-more {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.load-more-btn {
  padding: 20rpx 40rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #e4e7ed;
  transition: all 0.2s ease;
}

.load-more-btn:active {
  background: #f5f7fa;
}

.load-more-text {
  font-size: 28rpx;
  color: #666666;
}

/* 到底提示 */
.end-tip {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.end-text {
  font-size: 26rpx;
  color: #999999;
}

/* 浮动操作按钮 */
.fab-container {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 1000;
}

.fab-menu {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.fab-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  opacity: 0;
  transform: translateX(100rpx);
  transition: all 0.3s ease;
}

.fab-menu.expanded .fab-item {
  opacity: 1;
  transform: translateX(0);
}

.fab-icon {
  font-size: 24rpx;
}

.fab-text {
  font-size: 24rpx;
  color: #333333;
  white-space: nowrap;
}

.fab-main {
  width: 96rpx;
  height: 96rpx;
  background: #409eff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.4);
  transition: all 0.3s ease;
}

.fab-main .fab-icon {
  font-size: 32rpx;
  color: #ffffff;
}

.fab-menu.expanded .fab-main {
  transform: rotate(45deg);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .page-container {
    padding: 0;
  }
  
  .search-filter-section {
    padding: 16rpx;
  }
  
  .stats-summary {
    margin: 16rpx;
    padding: 24rpx;
  }
  
  .logs-container {
    padding: 0 16rpx 40rpx;
  }
  
  .log-card {
    padding: 20rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background-color: #1a1a1a;
  }
  
  .search-filter-section {
    background: #2a2a2a;
    border-bottom-color: #404040;
  }
  
  .search-input {
    background: #404040;
    color: #ffffff;
  }
  
  .filter-tab {
    background: #404040;
  }
  
  .filter-tab.active {
    background: #1e3a8a;
  }
  
  .stats-summary,
  .log-card {
    background: #2a2a2a;
  }
  
  .date-badge {
    background: #2a2a2a;
    border-color: #404040;
  }
  
  .user-name,
  .operation-title,
  .detail-title {
    color: #ffffff;
  }
  
  .operation-desc,
  .detail-label {
    color: #cccccc;
  }
}

/* 动画效果 */
.timeline-item {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.log-card {
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}