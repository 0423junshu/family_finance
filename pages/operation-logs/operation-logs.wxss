/* pages/operation-logs/operation-logs.wxss */

.operation-logs-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 成员活动区域 */
.member-activity-section {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  opacity: 0.9;
  display: block;
}

.member-activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-activity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.member-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.member-name {
  font-size: 28rpx;
  font-weight: 500;
}

.online-status {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #FF3B30;
}

.online-status.online {
  background: #34C759;
  box-shadow: 0 0 8rpx rgba(52, 199, 89, 0.4);
}

.activity-stats {
  text-align: right;
}

.activity-count {
  font-size: 32rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 4rpx;
}

.activity-label {
  font-size: 22rpx;
  opacity: 0.8;
  display: block;
}

.operation-stats-section {
  margin-top: 16rpx;
}

.stats-toggle {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  color: white;
}

.stats-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stats-details {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.level-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.level-tag {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.level-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.level-dot.info { background: #0052d9; }
.level-dot.warning { background: #ed7b2f; }
.level-dot.error { background: #e34d59; }
.level-dot.critical { background: #ad2102; }

/* 搜索和筛选 */
.search-filter-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.search-bar {
  margin-bottom: 24rpx;
}

.filter-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* 日志列表 */
.logs-container {
  margin: 20rpx;
}

.date-group {
  margin-bottom: 32rpx;
}

.date-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 16rpx;
}

.date-line {
  flex: 1;
  height: 1rpx;
  background: #e0e0e0;
}

.date-text {
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

/* 时间轴样式 */
.timeline {
  position: relative;
  padding-left: 60rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e0e0e0;
}

.log-item {
  position: relative;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.log-item:hover {
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.12);
}

.log-item.expanded {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.16);
}

.log-item::before {
  content: '';
  position: absolute;
  left: -46rpx;
  top: 32rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: white;
  border: 4rpx solid #0052d9;
  z-index: 2;
}

.log-item.warning::before { border-color: #ed7b2f; }
.log-item.error::before { border-color: #e34d59; }
.log-item.critical::before { border-color: #ad2102; }

.log-header {
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  cursor: pointer;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.log-main {
  flex: 1;
  min-width: 0;
}

.log-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.operation-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.level-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.level-badge.info { background: #0052d9; }
.level-badge.warning { background: #ed7b2f; }
.level-badge.error { background: #e34d59; }
.level-badge.critical { background: #ad2102; }

.log-summary {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.log-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.user-role {
  padding: 2rpx 8rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.log-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #f5f5f5;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  transition: all 0.2s ease;
}

.action-btn:hover {
  background: #e0e0e0;
}

.action-btn.primary {
  background: #0052d9;
  color: white;
}

.action-btn.danger {
  background: #e34d59;
  color: white;
}

/* 展开详情 */
.log-details {
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx;
  background: #fafafa;
}

.detail-section {
  margin-bottom: 24rpx;
}

.detail-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.detail-content {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
}

.detail-item {
  display: flex;
  margin-bottom: 8rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-key {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.affected-data {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.data-tag {
  padding: 8rpx 16rpx;
  background: #e3f2fd;
  color: #1976d2;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.data-count {
  background: #1976d2;
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

/* 空状态 */
.empty-container {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #ccc;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-description {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-more {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}

/* 浮动按钮 */
.fab-container {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  z-index: 1000;
}

.fab-main {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: #0052d9;
  color: white;
  border: none;
  font-size: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-main.expanded {
  transform: rotate(45deg);
}

.fab-menu {
  position: absolute;
  bottom: 140rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.fab-menu.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.fab-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.fab-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: white;
  border: none;
  font-size: 36rpx;
  color: #666;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.fab-btn:hover {
  transform: scale(1.1);
}

.fab-label {
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .stats-overview {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .stats-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .filter-row {
    flex-direction: column;
  }
  
  .log-header {
    padding: 16rpx;
  }
  
  .log-actions {
    flex-direction: column;
  }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 下拉刷新样式 */
.refresh-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
}

/* 骨架屏 */
.skeleton-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.skeleton-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.skeleton-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-content {
  flex: 1;
}

.skeleton-line {
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-line.medium {
  width: 80%;
}

@keyframes skeleton-loading {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.4;
  }
  100% {
    opacity: 1;
  }
}