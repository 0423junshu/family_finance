/* pages/profile/profile.wxss */
@import "../../styles/variables.wxss";
@import "../../styles/common.wxss";

.page-container {
  padding-top: 176rpx;
  padding-bottom: 160rpx;
  background: #F5F5F5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: #FFFFFF;
  margin: 32rpx;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 12rpx;
}

.phone {
  font-size: 24rpx;
  color: #8E8E93;
}

/* 设置列表 */
.settings-section {
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.setting-title {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

.setting-arrow {
  width: 32rpx;
  height: 32rpx;
}

.arrow-icon {
  width: 100%;
  height: 100%;
}

/* 其他功能 */
.other-section {
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.other-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.other-item:last-child {
  border-bottom: none;
}

.other-item.logout {
  justify-content: center;
}

.other-title {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.logout-text {
  color: #FF3B30;
}

.other-arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 32rpx;
}

.version-text {
  font-size: 24rpx;
  color: #8E8E93;
}