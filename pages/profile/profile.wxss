/* pages/profile/profile.wxss */
@import '/styles/safe-area.wxss';
@import "../../styles/variables.wxss";
@import "../../styles/common.wxss";

.top-safe-inset {
  height: env(safe-area-inset-top, 0px);
  height: constant(safe-area-inset-top, 0px);
}
.page-container {
  padding-top: calc(16rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(16rpx + constant(safe-area-inset-top, 0px));
  padding-top: 20rpx;
  padding-bottom: 160rpx;
  background: #F5F5F5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: #FFFFFF;
  margin: 32rpx;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 12rpx;
}

.phone {
  font-size: 24rpx;
  color: #8E8E93;
}

/* 设置列表 */
.settings-section {
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F2F2F7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.setting-title {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

.setting-arrow {
  width: 32rpx;
  height: 32rpx;
}

.arrow-icon {
  width: 100%;
  height: 100%;
  font-size: 36rpx;
  font-weight: 600;
  color: #8E8E93;
}

/* 其他功能 */
.other-section {
  background: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.other-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F2F2F7;
}

.other-item:last-child {
  border-bottom: none;
}

.other-item.logout {
  justify-content: center;
}

.other-title {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.logout-text {
  color: #FF3B30;
}

.other-arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 32rpx;
}

.version-text {
  font-size: 24rpx;
  color: #8E8E93;
}

/* ==================== 家庭协作功能样式 ==================== */

/* 缩小协作区块与下方设置区块的垂直间距，统一为24rpx */
.collaboration-section {
  margin: 0 32rpx 0rpx;
}

/* 统一为与设置项一致的尺寸与风格 */
.collaboration-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: none;
  border: none;
  position: relative;
  overflow: hidden;
  transition: background 0.2s ease;
}

.collaboration-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.collaboration-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8E8E 100%);
}

.collaboration-invite-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border: 2rpx dashed rgba(102, 126, 234, 0.2);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  transition: all 0.3s ease;
}

.collaboration-invite-card:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: rgba(102, 126, 234, 0.3);
}

/* 与设置项内部行距一致，略微收紧 */
.card-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 8rpx;
}

.card-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: #F2F2F7;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
}

.card-icon.invite {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
  border: 2rpx dashed rgba(102, 126, 234, 0.4);
  box-shadow: none;
}

.icon-text {
  font-size: 32rpx;
  color: #667eea;
}

.card-icon.invite .icon-text {
  color: #667eea;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1C1C1E;
  display: block;
  line-height: 1.2;
}

.card-subtitle {
  font-size: 24rpx;
  color: #8E8E93;
  display: block;
  line-height: 1.2;
}

.card-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #FF3B30;
}

.status-indicator.online {
  background: #34C759;
  box-shadow: 0 0 8rpx rgba(52, 199, 89, 0.4);
}

.card-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

.card-body {
  margin-top: 0;
}

.card-desc {
  font-size: 26rpx;
  color: #8E8E93;
  line-height: 1.4;
  display: block;
}

/* ==================== 响应式适配 ==================== */

@media (max-width: 750rpx) {
  .collaboration-section {
    margin: 0 24rpx 24rpx;
  }
  
  .collaboration-card,
  .collaboration-invite-card {
    padding: 32rpx 24rpx;
  }
  
  .card-icon {
    width: 72rpx;
    height: 72rpx;
  }
  
  .icon-text {
    font-size: 36rpx;
  }
  
  .card-title {
    font-size: 28rpx;
  }
  
  .card-subtitle {
    font-size: 22rpx;
  }
  
  .card-desc {
    font-size: 24rpx;
  }
}