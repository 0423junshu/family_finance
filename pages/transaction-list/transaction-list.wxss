/* pages/transaction-list/transaction-list.wxss */
.page-container {
  padding-top: 176rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 8rpx;
}

.stats-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
}

.stats-value.income {
  color: #34C759;
}

.stats-value.expense {
  color: #FF3B30;
}

/* 筛选工具栏 */
.filter-toolbar {
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.filter-item text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 内容区域 */
.content {
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  min-height: 60vh;
  padding: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(102, 126, 234, 0.2);
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 40rpx;
}

/* 交易列表 */
.transaction-list {
  margin-top: 16rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.8);
  transition: all 0.3s ease;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item:active {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
  margin: 0 -16rpx;
  padding: 24rpx 16rpx;
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(102, 126, 234, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
}

.transaction-info {
  flex: 1;
}

.transaction-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 8rpx;
}

.transaction-meta {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.transaction-date {
  font-size: 24rpx;
  color: #8E8E93;
  margin-right: 16rpx;
}

.transaction-account {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.transaction-description {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 4rpx;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 700;
  text-align: right;
}

.transaction-amount.income {
  color: #34C759;
}

.transaction-amount.expense {
  color: #FF3B30;
}

/* 筛选面板 */
.filter-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-panel {
  width: 100%;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.8);
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C1C1E;
}

.filter-actions {
  display: flex;
  align-items: center;
}

.filter-reset {
  font-size: 28rpx;
  color: #667eea;
  margin-right: 32rpx;
}

.filter-close {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 600;
}

.filter-content {
  max-height: 60vh;
  padding: 0 32rpx 32rpx;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 24rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  padding: 16rpx 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: #667eea;
  color: #FFFFFF;
}

.filter-option text {
  font-size: 26rpx;
  font-weight: 500;
}

.filter-option.active text {
  color: #FFFFFF;
}

/* 日期范围选择器 */
.date-range-picker {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.date-picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
}

.date-label {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.date-value {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

/* 分类筛选 */
.category-filter {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.category-option {
  padding: 20rpx 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.category-option.active {
  background: #667eea;
}

.category-option text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1C1C1E;
}

.category-option.active text {
  color: #FFFFFF;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
}