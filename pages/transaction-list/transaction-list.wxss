@import '/styles/icons.wxss';
/* pages/transaction-list/transaction-list.wxss */
@import '/styles/safe-area.wxss';
@import '/styles/variables.wxss';

.page-container {
  padding-top: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
}

/* 优化的财务概览模块 */
.md-stats-container {
  padding: 24rpx 32rpx 20rpx;
  margin-bottom: 20rpx;
}

.md-stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 28rpx 24rpx 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.md-stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.md-stats-header {
  margin-bottom: 20rpx;
}

.md-stats-title {
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: block;
  margin-bottom: 6rpx;
  line-height: 1.3;
}

.md-stats-subtitle {
  font-size: 22rpx;
  color: #8E8E93;
  display: block;
  font-weight: 500;
}

.md-stats-grid {
  display: flex;
  gap: 12rpx;
}

.md-stat-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 14rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  min-height: 80rpx;
}

.md-stat-item:active {
  transform: scale(0.98);
}

.md-stat-income {
  background: rgba(52, 199, 89, 0.08);
}

.md-stat-expense {
  background: rgba(255, 59, 48, 0.08);
}

.md-stat-balance {
  background: rgba(0, 122, 255, 0.08);
}

.md-stat-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  flex-shrink: 0;
}

.md-icon {
  font-size: 20rpx;
  font-weight: bold;
}

.md-stat-income .md-icon {
  color: #34c759;
}

.md-stat-expense .md-icon {
  color: #ff3b30;
}

.md-stat-balance .md-icon {
  color: #007aff;
}

.md-stat-content {
  flex: 1;
  min-width: 0;
}

.md-stat-label {
  font-size: 20rpx;
  color: #8E8E93;
  display: block;
  margin-bottom: 2rpx;
  font-weight: 500;
  line-height: 1.2;
}

.md-stat-value {
  font-size: 26rpx;
  font-weight: 700;
  display: block;
  line-height: 1.2;
  word-break: break-all;
}

.md-stat-income .md-stat-value {
  color: #34c759;
}

.md-stat-expense .md-stat-value {
  color: #ff3b30;
}

.md-stat-balance .md-stat-value.positive {
  color: #34c759;
}

.md-stat-balance .md-stat-value.negative {
  color: #ff3b30;
}

/* 紧凑的操作栏 */
.md-action-bar {
  display: flex;
  gap: 12rpx;
  padding: 0 32rpx 12rpx;
  justify-content: flex-start;
}

.md-action-chip {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 18rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  min-height: 56rpx;
}

.md-action-chip:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.md-chip-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
  color: #FFFFFF;
}

.md-chip-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 下拉选择器样式 */
.dropdown-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.dropdown-selector:active {
  background: rgba(242, 242, 247, 1);
}

.dropdown-text {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.dropdown-arrow {
  font-size: 20rpx;
  color: #8E8E93;
  transition: transform 0.3s ease;
}

.dropdown-options {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  max-height: 400rpx;
  overflow-y: auto;
  border: 1rpx solid rgba(242, 242, 247, 0.8);
}

.dropdown-option {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.5);
  transition: all 0.3s ease;
}

.dropdown-option:last-child {
  border-bottom: none;
}

.dropdown-option:active {
  background: rgba(102, 126, 234, 0.1);
}

.dropdown-option.active {
  background: #667eea;
}

.dropdown-option text {
  font-size: 26rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.dropdown-option.active text {
  color: #FFFFFF;
}

/* 筛选工具栏 */
.filter-toolbar {
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.filter-item text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 内容区域 */
.content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx 24rpx 0 0;
  min-height: 60vh;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(102, 126, 234, 0.2);
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 40rpx;
}

/* 统一风格交易列表 */
.transaction-list {
  margin-top: 16rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.5);
  transition: all 0.3s ease;
  position: relative;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
  transition: background-color 0.2s ease;
}

.transaction-item:active::after {
  background-color: rgba(102, 126, 234, 0.1);
}

.transaction-item:active {
  transform: scale(0.98);
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.category-text-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.transaction-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.transaction-title {
  font-size: 28rpx;
  color: #1C1C1E;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.transaction-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.transaction-date {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 500;
}

.transaction-account {
  font-size: 22rpx;
  color: #8E8E93;
  font-weight: 500;
}

.transaction-description {
  font-size: 24rpx;
  color: #8E8E93;
  margin-top: 4rpx;
}

.transaction-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.transaction-amount .amount {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.transaction-amount .amount.income {
  color: #38ef7d;
}

.transaction-amount .amount.expense {
  color: #ff416c;
}

/* 统一风格筛选面板 */
.filter-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.filter-panel {
  width: 100%;
  max-height: 80vh;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.8);
  position: relative;
}

.filter-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.filter-actions {
  display: flex;
  align-items: center;
}

.filter-reset {
  font-size: 28rpx;
  color: #667eea;
  margin-right: 32rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(102, 126, 234, 0.1);
  font-weight: 500;
}

.filter-close {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(242, 242, 247, 0.8);
}

.filter-content {
  max-height: 60vh;
  padding: 0 32rpx 32rpx;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 24rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  padding: 16rpx 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.filter-option.active {
  background: #667eea;
  color: #FFFFFF;
}

.filter-option text {
  font-size: 26rpx;
  font-weight: 500;
}

.filter-option.active text {
  color: #FFFFFF;
}

/* 日期范围选择器 */
.date-range-picker {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.date-picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
}

.date-label {
  font-size: 28rpx;
  color: #1C1C1E;
  font-weight: 500;
}

.date-value {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

/* 筛选区域相对定位 */
.filter-section {
  margin-bottom: 40rpx;
  position: relative;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
}

/* 日期范围显示 */
.date-range-display {
  padding: 20rpx 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.date-range-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  text-align: center;
  display: block;
}

/* 日期选择器弹窗 */
.date-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-picker-container {
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  animation: fadeInScale 0.3s ease-out;
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.date-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(242, 242, 247, 0.8);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.date-picker-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.date-picker-close {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: 300;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.date-picker-input {
  padding: 40rpx 32rpx;
}

.date-picker-display {
  padding: 24rpx;
  background: rgba(242, 242, 247, 0.8);
  border-radius: 16rpx;
  text-align: center;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.date-picker-display text {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 600;
}

/* 日期选择器内容区域 */
.date-picker-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding: 20rpx 32rpx 32rpx;
}

.date-picker-text {
  font-size: 30rpx;
  color: #333;
}

.date-picker-arrow {
  font-size: 28rpx;
  color: #666;
}

/* 日期选择器按钮 */
.date-picker-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.date-picker-btn {
  padding: 16rpx 32rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  border: none;
  cursor: pointer;
}

.date-picker-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.date-picker-btn.confirm {
  background-color: #007aff;
  color: white;
}

.date-picker-btn:active {
  opacity: 0.8;
}

/* 增强日期选择器显示效果 */
.date-picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.date-picker-display:active {
  background-color: rgba(242, 242, 247, 0.9);
}