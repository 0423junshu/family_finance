/* pages/transaction-list/transaction-list-simple.wxss */
@import "../../styles/common.wxss";

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 日期选择器 */
.date-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-display {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.date-text {
  display: inline-block;
  padding: 0 10rpx;
}

.date-range-tabs {
  display: flex;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.date-range-tab {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.date-range-tab.active {
  background-color: #007aff;
  color: #fff;
}

/* 统计卡片 */
.summary-card {
  display: flex;
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.summary-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #e0e0e0;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.summary-value.income {
  color: #34c759;
}

.summary-value.expense {
  color: #ff3b30;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-tabs {
  display: flex;
}

.filter-tab {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.filter-tab.active {
  color: #007aff;
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
}

.filter-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.filter-text {
  font-size: 24rpx;
  color: #666;
}

/* 筛选面板 */
.filter-panel {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-section {
  margin-bottom: 20rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 交易列表 */
.transaction-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.transaction-info {
  flex: 1;
}

.transaction-category {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.transaction-date {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 500;
}

.transaction-amount.income {
  color: #34c759;
}

.transaction-amount.expense {
  color: #ff3b30;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.add-btn {
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 123, 255, 0.3);
}

.fab-icon {
  font-size: 50rpx;
  color: #fff;
}