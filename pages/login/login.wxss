/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  right: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 60%;
  left: -30rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 30%;
  left: 50%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

/* 主要内容 */
.content {
  position: relative;
  z-index: 1;
  padding: 120rpx 60rpx 60rpx;
  /* 顶部安全区与下移适配 */
  padding-top: calc(120rpx + env(safe-area-inset-top, 0px));
  padding-top: calc(120rpx + constant(safe-area-inset-top, 0px));
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Logo 区域 */
.logo-section {
  text-align: center;
  margin-bottom: 120rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.logo-icon {
  font-size: 80rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录按钮区域 */
.login-section {
  margin-bottom: 80rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.wechat-btn {
  background: #07C160;
  color: #FFFFFF;
}

.wechat-btn:active {
  background: #06AD56;
  transform: scale(0.98);
}

.guest-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.guest-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.btn-disabled {
  opacity: 0.6;
  transform: none !important;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 功能介绍 */
.features-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 隐私声明 */
.privacy-section {
  margin-top: auto;
  text-align: center;
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}