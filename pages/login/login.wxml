<!-- pages/login/login.wxml -->
<view class="login-container">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="circle circle-1"></view>
    <view class="circle circle-2"></view>
    <view class="circle circle-3"></view>
  </view>
  
  <!-- 主要内容 -->
  <view class="content">
    <!-- Logo 区域 -->
    <view class="logo-section">
      <view class="logo">
        <text class="logo-icon">💰</text>
      </view>
      <text class="app-name">家庭财务管理</text>
      <text class="app-desc">让家庭理财更简单</text>
    </view>
    
    <!-- 登录按钮区域 -->
    <view class="login-section">
      <button 
        class="login-btn wechat-btn {{loading ? 'btn-disabled' : ''}}"
        bindtap="onWechatLogin"
        disabled="{{loading}}"
      >
        <view class="btn-content">
          <text class="btn-icon">👤</text>
          <text class="btn-text">{{loading ? '登录中...' : '微信快速登录'}}</text>
        </view>
      </button>
      
      <button 
        class="login-btn guest-btn"
        bindtap="onGuestMode"
      >
        <view class="btn-content">
          <text class="btn-icon">👁</text>
          <text class="btn-text">游客模式体验</text>
        </view>
      </button>
    </view>
    
    <!-- 功能介绍 -->
    <view class="features-section">
      <view class="feature-item">
        <text class="feature-icon">📊</text>
        <text class="feature-text">智能记账分析</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">👨‍👩‍👧‍👦</text>
        <text class="feature-text">家庭协作管理</text>
      </view>
      <view class="feature-item">
        <text class="feature-icon">🎯</text>
        <text class="feature-text">财务目标规划</text>
      </view>
    </view>
    
    <!-- 隐私声明 -->
    <view class="privacy-section">
      <text class="privacy-text">
        登录即表示同意《用户协议》和《隐私政策》
      </text>
    </view>
  </view>
</view>