/* pages/assets/assets.wxss */
.container {
  padding: 20rpx;
  padding-top: 30rpx; /* 轻微增加顶部间距，保持布局协调 */
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 月份选择器样式 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.stats-card--compact {
  padding: 30rpx 24rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-right: 16rpx;
}

.date-display {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: 12rpx;
}

.stats-subtitle {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

.date-status {
  font-size: 22rpx;
  color: #8E8E93;
  margin-top: 2rpx;
}

.month-arrow {
  font-size: 28rpx;
  color: #667eea;
  transition: transform 0.3s ease;
}

.month-selector:active .month-arrow {
  transform: rotate(180deg);
}

.stats-content {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(102, 126, 234, 0.05);
  transition: all 0.3s ease;
}

.stat-label {
  font-size: 24rpx;
  color: #8E8E93;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1C1C1E;
}

.stat-item.income .stat-value {
  color: #38ef7d;
}

/* 月份选择器弹窗样式 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  background: #FFFFFF;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F2F2F7;
  background: #FFFFFF;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
}

.picker-close {
  font-size: 40rpx;
  color: #8E8E93;
  padding: 10rpx;
  cursor: pointer;
}

.picker-body {
  padding: 30rpx;
  background: #FFFFFF;
}

.picker-info {
  text-align: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.current-selection {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid #F2F2F7;
  background: #FFFFFF;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  outline: none;
  box-sizing: border-box;
  font-weight: 500;
  margin: 0;
  padding: 0;
}

.cancel-btn::after, .confirm-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #666;
}

.confirm-btn {
  background-color: #667eea;
  color: #fff;
}

/* 总资产展示 - 移至顶部 */
.total-assets-section {
  margin-bottom: 40rpx;
}

.total-assets-content {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
}

.total-assets {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  opacity: 0.9;
}

.amount {
  font-size: 48rpx;
  font-weight: 600;
  margin: 10rpx 0;
}

.assets-equation {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}



/* 区块样式 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-amount {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-right: 20rpx;
  background-color: #f5f7fa;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #4caf50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.add-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: 300;
}

/* 账户列表 */
.account-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.account-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.account-item:last-child {
  border-bottom: none;
}

.account-item:active {
  background-color: #f8f9fa;
}

.account-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.account-info {
  flex: 1;
}

.account-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.account-type {
  font-size: 24rpx;
  color: #999;
}

.account-balance {
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.balance-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.edit-btn {
  background-color: #e3f2fd;
  color: #2196f3;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.delete-btn {
  background-color: #ffebee;
  color: #f44336;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  margin-top: 8rpx;
}

/* 投资列表 */
.investment-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.investment-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.investment-item:last-child {
  border-bottom: none;
}

.investment-item:active {
  background-color: #f8f9fa;
}

.investment-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.investment-info {
  flex: 1;
}

.investment-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.investment-type {
  font-size: 24rpx;
  color: #999;
}

.investment-data {
  text-align: right;
}

.investment-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.investment-profit {
  font-size: 24rpx;
  font-weight: 500;
}

.investment-profit.positive {
  color: #4caf50;
}

.investment-profit.negative {
  color: #f44336;
}

/* 编辑对话框样式 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog {
  background-color: #fff;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.dialog-content {
  padding: 40rpx;
}

.account-info-display {
  margin-bottom: 30rpx;
  text-align: center;
}

.account-info-display .account-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.amount-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #fff;
}

.dialog-footer {
  display: flex;
  padding: 20rpx 40rpx 40rpx;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn.cancel {
  background-color: #f8f9fa;
  color: #666;
}

.btn.confirm {
  background-color: #4caf50;
  color: #fff;
}

