/* components/navigation-bar/navigation-bar.wxss */
.navigation-bar {
  width: 100%;
  background: transparent !important;
  background-color: transparent !important;
  position: relative;
  z-index: 99;
  /* 完全移除阴影，确保无视觉差异 */
  box-shadow: none !important;
  border: none !important;
  /* 确保导航栏可见 */
  min-height: 88rpx;
}

.navigation-bar-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 100%;
}

.back-button {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  z-index: 1;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-button {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 1;
}

.action-text {
  font-size: 30rpx;
  color: #007AFF;
}

.right-slot {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 1;
}