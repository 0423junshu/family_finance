/* components/navigation-bar/navigation-bar.wxss */
.navigation-bar {
  width: 100%;
  background-color: #fff;
  position: relative;
  z-index: 99;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  /* 增加导航栏整体高度，确保内容不被系统UI遮挡 */
  padding-bottom: 10rpx;
}

.navigation-bar-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.back-button {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  z-index: 1;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-button {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 1;
}

.action-text {
  font-size: 30rpx;
  color: #007AFF;
}