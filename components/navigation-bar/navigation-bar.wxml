<!-- components/navigation-bar/navigation-bar.wxml -->
<view class="navigation-bar" style="height: {{navBarHeight}}px;">
  <view class="navigation-bar-content" style="height: {{navBarHeight}}px;">
    <view wx:if="{{showBack}}" class="back-button" bindtap="onBackTap">
      <text class="back-icon">←</text>
    </view>
    <view class="title">{{title}}</view>
    <view wx:if="{{showHideAmount}}" class="action-button" bindtap="onHideAmountTap">
      <text class="action-text">{{hideAmount ? '***' : '显示'}}</text>
    </view>
    <view wx:if="{{rightContent}}" class="action-button" bindtap="onRightTap">
      <text class="action-text">{{rightContent}}</text>
    </view>
    <!-- 支持右侧插槽内容 -->
    <view wx:if="{{!rightContent && !showHideAmount}}" class="right-slot">
      <slot name="right"></slot>
    </view>
  </view>
</view>
