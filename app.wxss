/* app.wxss */
@import './styles/variables.wxss';
@import './styles/common.wxss';
@import './styles/iconfont.wxss';

/* 现代化全局样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', sans-serif;
  line-height: 1.6;
  min-height: 100vh;
}

/* 页面容器 */
.page-container {
  background: #F8F9FA;
  min-height: 100vh;
  position: relative;
}

/* 现代化容器 */
.container {
  padding: 0 32rpx;
  box-sizing: border-box;
}

/* 现代化卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

/* 渐变卡片 */
.card.gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
}

.card.gradient-green {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: #FFFFFF;
}

.card.gradient-orange {
  background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
  color: #FFFFFF;
}

.card.gradient-red {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  color: #FFFFFF;
}

/* 现代化按钮样式 */
.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 28rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn:active::before {
  left: 100%;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: 2rpx solid #667eea;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn.danger {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 65, 108, 0.3);
}

.btn.success {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  box-shadow: 0 8rpx 24rpx rgba(17, 153, 142, 0.3);
}

/* 现代化输入框样式 */
.input {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  font-size: 28rpx;
  color: #1C1C1E;
  border: 2rpx solid transparent;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.input:focus {
  background: #FFFFFF;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  transform: translateY(-2rpx);
}

/* 现代化文本样式 */
.text-primary {
  color: #667eea;
  font-weight: 600;
}

.text-success {
  color: #38ef7d;
  font-weight: 600;
}

.text-warning {
  color: #f7b733;
  font-weight: 600;
}

.text-danger {
  color: #ff416c;
  font-weight: 600;
}

.text-secondary {
  color: #8E8E93;
}

.text-gradient {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 700;
}

/* 安全区域适配 */
.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 隐藏金额样式 */
.amount-hidden {
  color: var(--text-secondary) !important;
}

.amount-hidden::before {
  content: '***';
}

/* 现代化加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
  color: var(--text-secondary);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 现代化空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: var(--text-secondary);
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-state-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1C1C1E;
}

.empty-state-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  text-align: center;
  line-height: 1.6;
}

/* 现代化错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.error-state-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  color: #ff416c;
}

.error-state-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff416c;
  margin-bottom: 16rpx;
}

.error-state-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 现代化布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 现代化动画效果 */
.fade-in {
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.bounce-in {
  animation: bounceIn 0.6s ease-out;
}

@keyframes bounceIn {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 现代化间距样式 */
.mt-8 { margin-top: 8rpx; }
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mt-48 { margin-top: 48rpx; }
.mt-64 { margin-top: 64rpx; }

.mb-8 { margin-bottom: 8rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.mb-48 { margin-bottom: 48rpx; }
.mb-64 { margin-bottom: 64rpx; }

.ml-8 { margin-left: 8rpx; }
.ml-16 { margin-left: 16rpx; }
.ml-24 { margin-left: 24rpx; }
.mr-8 { margin-right: 8rpx; }
.mr-16 { margin-right: 16rpx; }
.mr-24 { margin-right: 24rpx; }

.p-8 { padding: 8rpx; }
.p-16 { padding: 16rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }
.p-48 { padding: 48rpx; }

/* 玻璃态效果 */
.glass {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
}

/* 现代化阴影效果 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shadow-md {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.shadow-lg {
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
}

.shadow-xl {
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.16);
}

/* 现代化圆角样式 */
.rounded-sm { border-radius: 8rpx; }
.rounded-md { border-radius: 12rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-2xl { border-radius: 24rpx; }
.rounded-full { border-radius: 50%; }

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx;
  }
  
  .card {
    padding: 24rpx;
    border-radius: 16rpx;
  }
  
  .btn {
    padding: 24rpx 40rpx;
    font-size: 26rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
  }
  
  .page-container {
    background: #1a202c;
  }
  
  .card {
    background: rgba(45, 55, 72, 0.95);
    border: 1rpx solid rgba(255, 255, 255, 0.1);
  }
  
  .input {
    background: rgba(45, 55, 72, 0.9);
    color: #FFFFFF;
  }
  
  .empty-state-text,
  .error-state-text {
    color: #FFFFFF;
  }
}

/* 特殊效果 */
.pulse {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

.glow {
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.5);
}

/* 悬浮按钮样式 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  color: #FFFFFF;
  font-size: 48rpx;
  font-weight: 300;
}